COMPILER InlineAssembly

//parser methods and fields here

IGNORECASE

CHARACTERS
digit = "0123456789".
binDigit = "01".
octDigit = "01234567".
hexDigit = "0123456789ABCDEFabcdef".
letter = 'a' .. 'z'.
lf = '\n'.

TOKENS
ident = letter {letter | digit | '_'}.
binNumber = "0b" binDigit { binDigit }.
hexNumber = "0x" hexDigit { hexDigit }.
number = ["-"] digit { digit }.

PRAGMAS
IGNORE "\n\t\r"

PRODUCTIONS

InlineAssembly<> =
  "\""
  { AssemblyInstruction }
  "\""
  							(. root = factory.finishInline(); .)
  .

