AssemblyInstruction<> =
  ( ZeroOp<>
  | UnOp8<>
  | UnOp16<>
  | UnOp32<>
  | UnOp64<>
  | UnOp<>
  | BinOp8<>
  | BinOp16<>
  | BinOp32<>
  | BinOp64<>
  | BinOp<>
  | IMulDiv<>
  | Jump<>
  |
  )
  ";"
  .

